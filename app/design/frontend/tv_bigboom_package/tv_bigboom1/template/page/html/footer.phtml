<script type="text/javascript">
    jQuery(document).ready(function($){
        $(".products-grid .item,.products-list .item").each(function () {
            var $item = $(this);
            if(!$(this).find(".btn-cart")){
                return false;
            }else{
                $item.find(".btn-cart").unbind("click").click(function () {
                    var item_qty = parseInt($item.find(".act-input").val());
                    var item_id;
                    /*
                    * find("#id.class") can't judge whether element is exist,but can draw a conclusion by it's length
                    * */
                    if($item.find(".regular-price").length>0){
                        item_id = $item.find(".regular-price").attr("id");
                    }else{
                        item_id = $item.find(".old-price .price").attr("id");
                    }
                    item_id = item_id.split('-price-')[1];
                    if(!item_qty){
                        item_qty = 1;
                    }else if(item_qty<0){
                        showBoxInfo('<div class ="ajaxcartReponse"><p class ="info">Input number must more than <b>1</b></p></div>');
                        return false;
                    }
                    ajaxtoCart(item_id,item_qty);
                    $(document).ajaxComplete();
                });
            }
        });

        /*
         * ajaxMiniCart
         * product_id,qty,method('update')
         * */
        function ajaxtoCart(id, itemqty){
            if($.ajax){
                $.ajax({
                    type:'post',
                    async:true,
                    url:'<?php echo $_webMiniCartUrl."/mivec/checkout/cart/update.php"?>',
                    data:{product_id:id,qty:itemqty,method:'add'},
                    dataType:'json',
                    beforeSend: function(){ loadingAjaxcart(true);},
                    success:function (data) {
                        loadingAjaxcart(false);

                    },
                    complete: function(XMLHttpRequest, textStatus) {
                        if(textStatus!=='success'){
                            showBoxInfo('<div class ="ajaxcartReponse"><p class ="info">Can&acute;t update cart now</p></div>');
                            return false;
                        }
                        if(itemqty === 1){
                            showBoxInfo('<div class ="ajaxcartReponse"><p class ="info">Item is added to your cart</p></div>');
                        }else{
                            showBoxInfo('<div class ="ajaxcartReponse"><p class ="info">'+itemqty+' items are added to your cart</p></div>');
                        }
                    },
                    error: function(XMLHttpRequest, textStatus, errorThrown){
                        showBoxInfo('<div class ="ajaxcartReponse"><p class="info">Can&acute;t update cart now,please try again</p></div>')
                    }
                });
            }
        }
    });
</script>
